:80 {
    redir https://{host}{uri} permanent
}

:443 {
    tls /etc/ssl/private/tls.crt /etc/ssl/private/tls.key
    handle /.well-known/matrix/mautrix {
        header Content-Type application/json
        respond `{"fi.mau.bridges":["https://matrix-googlechat.taila659a.ts.net","https://matrix-slack.taila659a.ts.net"]}` 200
    }
    handle {
        reverse_proxy localhost:8448
    }
}
